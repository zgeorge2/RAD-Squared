#!/usr/bin/env groovy
// gerrit verify pipeline
pipeline {
    agent { label 'default' }

    // NOTE: pipeline dsl only supports cron and pollscm triggers for now
    // so the Gerrit event trigger is done in the job DSL configuration
    // in tools/jenkins/jobs/cgs-service.groovy in the bellevue-ci repo

    tools {
        jdk '1.8.latest'
        maven 'mvn_latest'
    }

    stages {
        stage('Checkout') {
            steps {
                dir('vap-saas-core') {
                    // initial checkout from gerrit done while getting the Jenkinsfile
                    sh 'ls -a'
                }
            }
        }

        stage('Build') {
            steps {
                timestamps {
                    dir('vap-saas-core') {
                        ansiColor('xterm') {
                            script {
                                sh 'mvn -Dmaven.repo.local=.repository clean install'
                            }
                        }
                    }
                }
            }
        }
    }
}